<?xml version="1.0"?>

<robot name="sixDOF">
  
  <!-- *************************************************** -->
  <!-- ******************** Kinematics ******************* -->
  <!-- *************************************************** -->

  <link name="world"/>

  <joint name="placement" type="fixed">
    <parent link="world"/>
    <child  link="baseplate"/>
    <origin xyz="0 0 0" rpy="0 0 0"/>			<!-- WHERE IS THE BASE -->
  </joint>

  <!-- BASE PLATE: Shift across the base plate to the base motor. --> 
  <link name="baseplate">
    <visual>
      <origin xyz="0.0 0.0 0.0125" rpy="0 0 0"/>
        <geometry>
          <box size="0.2 0.1 0.0230"/>
        </geometry>
      <material name="wood"/>
    </visual>
  </link>

  <joint name="baseplate" type="fixed">
    <parent link="baseplate"/>
    <child  link="basemotor"/>
    <origin xyz="0 0 0.0230" rpy="0 0 0"/>
  </joint>

  <link name="basemotor">
    <visual>
      <origin xyz="0 0 0" rpy="0 0 1.5708"/>
      <geometry>
        <mesh filename="package://bmoHanoi/meshes/X8.stl"
	      scale="0.001 0.001 0.001"/>
      </geometry>
      <material name="hebi"/>
    </visual>
  </link>
  
  <joint name="base" type="continuous">
    <parent link="basemotor"/>
    <child  link="lbracket"/>
    <origin xyz="0 0 0.0451" rpy="0 0 0"/>
    <axis   xyz="0 0 1"/>
  </joint>
  

  <link name="lbracket"/>
  
  <joint name="lbracket" type="fixed">
    <parent link="lbracket"/>
    <child  link="shouldermotor"/>
    <origin xyz="-0.02 0 0.045" rpy="0 1.5708 0"/>	  <!-- L BRACKET DIMENIONS -->
  </joint>

  <!-- SHOULDER MOTOR: Thickness: X5 = 31.1mm, X8 = 45.1mm -->
  <link name="shouldermotor">
    <visual>
    <origin xyz="0 0 0" rpy="0 0 1.5708"/>
      <geometry>
        <mesh filename="package://bmoHanoi/meshes/X8.stl"
	      scale="0.001 0.001 0.001"/>
      </geometry>
      <material name="hebi"/>
    </visual>
  </link>

  <joint name="shoulder" type="continuous">
    <parent link="shouldermotor"/>
    <child  link="bicep"/>
    <origin xyz="0 0 0.0512" rpy="0 -1.5708 0"/>
    <axis   xyz="1 0 0"/>
  </joint>

  <!-- UPPER ARM: Shift across the upper arm (1/4in thickness) -->
  <link name="bicep">
    <visual>
      <origin xyz="0 0 0" rpy="0 -1.5708 3.1415"/>
      <geometry>
      	<mesh filename="package://bmoHanoi/meshes/BMOArm.stl"
	      scale="0.001 0.001 0.001"/>
      </geometry>
      <material name="cyan"/>
    </visual>
    <!-- Add a visual element -->
  </link>

  <joint name="elbowBase" type="fixed">
    <parent link="bicep"/>
    <child  link="elbowmotor"/>
    <origin xyz="0 0 .4351" rpy="0 0 0"/>
    <axis   xyz="1 0 0 "/>
  </joint>

  <link name="elbowmotor">
    <visual>
    <origin xyz="0 0 0" rpy="0 -1.5708 0"/>		
      <geometry>
        <mesh filename="package://bmoHanoi/meshes/X8.stl"
	      scale="0.001 0.001 0.001"/>
      </geometry>
      <material name="hebi"/>
    </visual>
  </link>
  
  <joint name="elbow" type="continuous">
    <parent link="elbowmotor"/>
    <child  link="forearm"/>
    <origin xyz="-0.0512 0 0" rpy="0 0 3.1415"/>
    <axis   xyz="1 0 0 "/>
  </joint>
  
  <link name="forearm">
    <visual>
      <origin xyz="0 0 0" rpy="0 -1.5708 3.1415"/>
      <geometry>
      	<mesh filename="package://bmoHanoi/meshes/BMOArm.stl"
	      scale="0.001 0.001 0.001"/>
      </geometry>
      <material name="cyan"/>
    </visual>
  </link>

  <joint name="wrist" type="continuous">
    <parent link="forearm"/>
    <child  link="hand"/>
    <origin xyz="0 0 .465" rpy="0 0 0"/>
    <axis   xyz="-1 0 0"/>
  </joint>

  <link name="hand"/>

  <joint name="head" type="continuous">
    <parent link="hand"/>
    <child  link="claw"/>
    <origin xyz="-.0975 0 -.045" rpy="0 0 0"/>
    <axis   xyz="0 0 -1"/>
  </joint>
  
  <link name="claw">
      <visual>
      <origin xyz="0 0 0" rpy="0 0 1.5708"/>
      <geometry>
      	<mesh filename="package://bmoHanoi/meshes/BMOClaw.stl"
	      scale="0.001 0.001 0.001"/>
      </geometry>
      <material name="green"/>
    </visual>
  </link>
  
  <joint name="claw" type="fixed">
    <parent link="claw"/>
    <child  link="camera"/>
    <origin xyz="-.03 .095 -0.02" rpy="0 0 0"/>
    <!-- <axis   xyz="0 0 -1"/> -->
  </joint>
  
  <link name="camera"/>

  <joint name="final" type="fixed">
    <parent link="camera"/>
    <child  link="tip"/>
    <origin xyz=".035 .07 -0.065" rpy="0 0 0"/>
  </joint>

  <link name="tip"/>


  <!-- *************************************************** -->
  <!-- ******************* RVIZ Colors ******************* -->
  <!-- *************************************************** -->

  <material name="white">    <color rgba="1.00 1.00 1.00 1"/>  </material>
  <material name="gray">     <color rgba="0.60 0.60 0.60 1"/>  </material>
  <material name="table">    <color rgba="0.85 0.77 0.77 1"/>  </material>
  <material name="black">    <color rgba="0.00 0.00 0.00 1"/>  </material>

  <material name="red">      <color rgba="1.00 0.00 0.00 1"/>  </material>
  <material name="green">    <color rgba="0.00 1.00 0.00 1"/>  </material>
  <material name="blue">     <color rgba="0.00 0.00 1.00 1"/>  </material>

  <material name="cyan">     <color rgba="0.00 1.00 1.00 1"/>  </material>
  <material name="magenta">  <color rgba="1.00 0.00 1.00 1"/>  </material>
  <material name="yellow">   <color rgba="1.00 1.00 0.00 1"/>  </material>

  <material name="orange">   <color rgba="1.00 0.65 0.00 1"/>  </material>
  <material name="wood">  <color rgba="0.82 0.62 0.04 1"/>  </material>
  <material name="hebi">  <color rgba="0.82 0.06 0.06 1"/>  </material>


  <!-- *************************************************** -->
  <!-- ****** Building Blocks (Visual AND Inertial) ****** -->
  <!-- *************************************************** -->

  <!-- *** World-Fixed: Mount 1, Motor 1 *** -->



</robot>
